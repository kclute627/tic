{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "jsx": "react-native",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@screens": ["src/screens"],
            "@components": ["src/components"],
            "@utils": ["src/utils"],
            "@config/*": ["src/config/*"],
            "@context/*": ["src/context/*"],
            "@assets/*": ["assets/*"]
        }
    }
}
